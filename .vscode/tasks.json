{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start WeatherMap server",
			"type": "shell",
			"command": "PORT=5002 ${workspaceFolder}/.venv/bin/python ${workspaceFolder}/project/backend/app.py",
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Stop WeatherMap server",
			"type": "shell",
			"command": "pkill -f project/backend/app.py || true"
		}
	]
}